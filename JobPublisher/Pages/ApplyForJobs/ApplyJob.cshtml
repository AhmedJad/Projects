@page
@model JobPublisher.Pages.ApplyForJobs.ApplyJobModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>ApplyForJob</h4>
<hr />
<div class="text-danger">
    @ViewBag.ApplyMessage
</div>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApplyForJob.Message" class="control-label"></label>
                <textarea asp-for="ApplyForJob.Message" class="form-control" ></textarea>
                <span asp-validation-for="ApplyForJob.Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Apply" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
